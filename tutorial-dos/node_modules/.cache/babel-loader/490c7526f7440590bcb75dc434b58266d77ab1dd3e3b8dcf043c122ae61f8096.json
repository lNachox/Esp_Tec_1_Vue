{"ast":null,"code":"import Hijo from './Hijo.vue';\nexport default {\n  components: {\n    Hijo // Importación del componente hijo\n  },\n  name: 'Base',\n  data() {\n    return {\n      mensajePadre: 'Hola desde el padre',\n      // Mensaje inicial del padre\n      tareas: [\n      // Lista inicial de tareas\n      {\n        nombre: 'Tarea 1',\n        completada: false\n      }, {\n        nombre: 'Tarea 2',\n        completada: false\n      }, {\n        nombre: 'Tarea 3',\n        completada: false\n      }]\n    };\n  },\n  methods: {\n    resetearMensaje() {\n      this.mensajePadre = 'Hola desde el padre'; // Método para resetear el mensaje del padre\n    }\n  }\n};","map":{"version":3,"names":["Hijo","components","name","data","mensajePadre","tareas","nombre","completada","methods","resetearMensaje"],"sources":["C:\\Users\\ignac\\OneDrive\\Escritorio\\Especializacion Tecnologica I\\Vue\\Esp_Tec_1_Vue\\tutorial-dos\\src\\components\\ComponentePadre.vue"],"sourcesContent":["<template>\r\n    <div class=\"container\">\r\n        <!-- Título del componente padre -->\r\n        <h1 class=\"text-center my-4\">Componente Padre</h1>\r\n\r\n        <!-- Componente hijo con un prop y un evento personalizado -->\r\n        <Hijo :mensaje=\"mensajePadre\" @actualizarMensaje=\"mensajePadre =\r\n        $event\" />\r\n\r\n        <!-- Botón para resetear el mensaje del padre -->\r\n        <button class=\"btn btn-primary mt-3\"\r\n        v-on:click=\"resetearMensaje\">Resetear Mensaje</button>\r\n        \r\n        <!-- Mensajes condicionales basados en el valor de mensajePadre -->\r\n        <p v-if=\"mensajePadre === 'Hola desde el padre'\" class=\"mt-3\">El\r\n        mensaje está en su estado original</p>\r\n        <p v-else class=\"mt-3 text-warning\">El mensaje ha sido cambiado por\r\n        el hijo</p>\r\n        \r\n        <!-- Lista de tareas con checkboxes -->\r\n        <div class=\"mt-5\">\r\n            <h2>Lista de tareas</h2>\r\n            <div v-for=\"(tarea, index) in tareas\" :key=\"index\" class=\"form-check\">\r\n                <!-- Checkbox vinculado a la propiedad completada de cada tarea -->\r\n                <input type=\"checkbox\" v-model=\"tarea.completada\" :id=\"'tarea' +\r\n                index\" class=\"form-check-input\">\r\n                <label :for=\"'tarea' + index\" class=\"form-check-label\">{{\r\n                tarea.nombre }}</label>\r\n                <!-- Mensaje condicional que se muestra cuando la tarea está\r\n                completada -->\r\n                <p v-if=\"tarea.completada\" class=\"text-success\">¡Tarea\r\n                completada!</p>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</template>\r\n    \r\n<script>\r\n    import Hijo from './Hijo.vue';\r\n    export default {\r\n        components: {\r\n            Hijo // Importación del componente hijo\r\n        },\r\n        name: 'Base',\r\n        data() {\r\n            return {\r\n                mensajePadre: 'Hola desde el padre', // Mensaje inicial del padre\r\n                tareas: [ // Lista inicial de tareas\r\n                    { nombre: 'Tarea 1', completada: false },\r\n                    { nombre: 'Tarea 2', completada: false },\r\n                    { nombre: 'Tarea 3', completada: false }\r\n                ]\r\n            }\r\n        },\r\n        methods: {\r\n            resetearMensaje() {\r\n                this.mensajePadre = 'Hola desde el padre'; // Método para resetear el mensaje del padre\r\n            }\r\n        }\r\n    }\r\n</script>"],"mappings":"AAsCI,OAAOA,IAAG,MAAO,YAAY;AAC7B,eAAe;EACXC,UAAU,EAAE;IACRD,IAAG,CAAE;EACT,CAAC;EACDE,IAAI,EAAE,MAAM;EACZC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,YAAY,EAAE,qBAAqB;MAAE;MACrCC,MAAM,EAAE;MAAE;MACN;QAAEC,MAAM,EAAE,SAAS;QAAEC,UAAU,EAAE;MAAM,CAAC,EACxC;QAAED,MAAM,EAAE,SAAS;QAAEC,UAAU,EAAE;MAAM,CAAC,EACxC;QAAED,MAAM,EAAE,SAAS;QAAEC,UAAU,EAAE;MAAM;IAE/C;EACJ,CAAC;EACDC,OAAO,EAAE;IACLC,eAAeA,CAAA,EAAG;MACd,IAAI,CAACL,YAAW,GAAI,qBAA